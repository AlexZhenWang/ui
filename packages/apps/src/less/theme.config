/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site        : 'polkadot';
@reset       : 'polkadot';

/* Elements */
@button      : 'polkadot';
@container   : 'polkadot';
@divider     : 'polkadot';
@flag        : 'polkadot';
@header      : 'polkadot';
@icon        : 'polkadot';
@image       : 'polkadot';
@input       : 'polkadot';
@label       : 'polkadot';
@list        : 'polkadot';
@loader      : 'polkadot';
@placeholder : 'polkadot';
@rail        : 'polkadot';
@reveal      : 'polkadot';
@segment     : 'polkadot';
@step        : 'polkadot';

/* Collections */
@breadcrumb  : 'polkadot';
@form        : 'polkadot';
@grid        : 'polkadot';
@menu        : 'polkadot';
@message     : 'polkadot';
@table       : 'polkadot';

/* Modules */
@accordion   : 'polkadot';
@checkbox    : 'polkadot';
@dimmer      : 'polkadot';
@dropdown    : 'polkadot';
@embed       : 'polkadot';
@modal       : 'polkadot';
@nag         : 'polkadot';
@popup       : 'polkadot';
@progress    : 'polkadot';
@rating      : 'polkadot';
@search      : 'polkadot';
@shape       : 'polkadot';
@sidebar     : 'polkadot';
@sticky      : 'polkadot';
@tab         : 'polkadot';
@transition  : 'polkadot';

/* Views */
@ad          : 'polkadot';
@card        : 'polkadot';
@comment     : 'polkadot';
@feed        : 'polkadot';
@item        : 'polkadot';
@statistic   : 'polkadot';

/*******************************
            Folders
*******************************/

/* Relative to apps/node_modules/semantic-ui-less */
@themesFolder : '../../packages/apps/src/less/themes';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import '~semantic-ui-less/theme.less';
@fontPath: '../../../themes/@{theme}/assets/fonts';
/* End Config */
